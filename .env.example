# ====================================
# SecureLLM MCP Server Configuration
# ====================================

# Core Configuration
# ------------------
# Root directory of your project
PROJECT_ROOT=/path/to/your/project

# Enable knowledge management system (SQLite + FTS5)
ENABLE_KNOWLEDGE=true

# Path to knowledge database (will be created if doesn't exist)
KNOWLEDGE_DB_PATH=~/.local/share/securellm/knowledge.db

# Semantic Cache Configuration
# -----------------------------
# Enable semantic caching for cost optimization (50-70% reduction)
ENABLE_SEMANTIC_CACHE=true

# Similarity threshold (0.0-1.0) for cache hits
# Higher = more strict matching, Lower = more lenient
SEMANTIC_CACHE_THRESHOLD=0.85

# Cache time-to-live in seconds (default: 1 hour)
SEMANTIC_CACHE_TTL=3600

# llama.cpp server URL for embeddings
# Must be running and accessible for semantic cache to work
LLAMA_CPP_URL=http://localhost:8080

# API Keys (Production: Load via SOPS)
# ------------------------------------
# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek API key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Observability & Metrics
# ------------------------
# Port for Prometheus metrics endpoint
METRICS_PORT=9090

# Logging level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Optional: Path to pino log file
# LOG_FILE=/var/log/securellm/mcp.log

# Security & Sandboxing
# ---------------------
# Enable sandboxed execution for tools (recommended: true)
ENABLE_SANDBOX=true

# Comma-separated list of allowed commands in sandbox
# SANDBOX_ALLOWED_COMMANDS=ls,cat,grep,find

# Rate Limiting
# -------------
# Global rate limit per provider (requests per minute)
# RATE_LIMIT_RPM=60

# Circuit breaker failure threshold (consecutive failures)
# CIRCUIT_BREAKER_THRESHOLD=5

# SSH Configuration (Optional)
# -----------------------------
# Default SSH key path for remote operations
# SSH_KEY_PATH=~/.ssh/id_rsa

# SSH connection timeout in milliseconds
# SSH_TIMEOUT=30000

# Browser Automation (Optional)
# ------------------------------
# Puppeteer executable path (auto-detected if not set)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Browser headless mode (true/false)
# BROWSER_HEADLESS=true

# NixOS Specific (Optional)
# --------------------------
# NixOS hostname (auto-detected if not set)
# NIXOS_HOSTNAME=kernelcore

# Nix flake path (default: /etc/nixos)
# NIX_FLAKE_PATH=/etc/nixos
