{
  "name": "securellm-bridge-mcp",
  "version": "2.0.0",
  "description": "MCP server for SecureLLM Bridge with Knowledge Management",
  "type": "module",
  "main": "build/index.js",
  "files": [
    "build/src/**/*",
    "build/types/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/src/index.js",
    "dev": "nodemon --watch src --ext ts --exec 'npm run build && node build/src/index.js'",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "test": "npm run build && node --test build/tests/**/*.test.js",
    "test:watch": "node --test --watch build/tests/**/*.test.js",
    "test:coverage": "c8 --reporter=text --reporter=html npm test",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "securellm",
    "llm",
    "security",
    "knowledge-management"
  ],
  "author": "kernelcore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcosfpina/securellm-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/marcosfpina/securellm-mcp/issues"
  },
  "homepage": "https://github.com/marcosfpina/securellm-mcp#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "better-sqlite3": "^11.7.0",
    "execa": "^9.0.0",
    "faker": "^5.5.3",
    "fast-json-stringify": "^6.0.0",
    "lru-cache": "^11.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^12.0.0",
    "puppeteer": "^23.0.0",
    "sharp": "^0.33.0",
    "ssh2": "^1.15.0",
    "systeminformation": "^5.23.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "@types/ssh2": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "c8": "^8.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "zod-to-json-schema": "^3.25.1"
  }
}
